{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/web",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "anchor test",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/out-tsc/**/*.js"
            ],
            "cwd": "${workspaceFolder}/anchor",
            "runtimeExecutable": "anchor",
            "runtimeArgs": ["test"],
            "sourceMaps": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
            ],
            "console": "integratedTerminal",
        },
        {
            "type": "lldb",
            "request": "custom",
            "name": "debug program",
            "targetCreateCommands": [
              "target create --arch bpfel ${workspaceFolder}/anchor/target/deploy/cyklon.so"
            ],
            "preLaunchTask": "start-debugger",
            "processCreateCommands": ["gdb-remote 127.0.0.1:9001"],
        }
    ]
}